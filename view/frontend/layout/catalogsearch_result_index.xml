<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="search_result_list">
            <action method="setTemplate" ifconfig="list_gallery/general/enable">
                <argument name="template" xsi:type="string">JS_ListGallery::product/list.phtml</argument>
            </action>
            <arguments>
                <argument name="gallery_model" xsi:type="object">JS\ListGallery\ViewModel\ListProducts</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
